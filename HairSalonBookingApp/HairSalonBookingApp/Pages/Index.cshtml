@page
@model IndexModel
@{
    ViewData["Title"] = "Trang Chủ";
    Layout = "_Layout";  // Sử dụng Layout chung
}

<div class="bg-primary text-white p-5">
    <section class="py-5 text-center">
        <h2 class="display-4 font-weight-bold text-dark text-uppercase mb-4">
            Dịch Vụ
        </h2>
        <div class="container">
            <div class="slick-slider d-flex justify-content-center flex-wrap">
                <div class="card shadow-lg p-3 rounded d-flex flex-column align-items-center text-center" style="width: 18rem;">
                    <img src="~/images/image.jpg" alt="Service Image" class="card-img-top rounded mb-3" style="width: 50%;">
                    <button onclick="navigateToService()" class="btn btn-warning mt-3 text-lg transition-transform">
                        Đặt Lịch Hẹn Ngay!
                    </button>
                </div>
            </div>
        </div>
    </section>

    <h2 class="text-center display-4 font-weight-bold text-dark text-uppercase mb-4">Gói Dịch Vụ</h2>
    <section class="bg-light shadow-lg p-5 rounded">
        <section class="py-5 bg-light text-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-4 mb-4">
                        <div class="card bg-primary text-white shadow-lg p-3 rounded text-center transition-transform">
                            <img src="~/images/Cắt tóc và tạo kiểu.jpg" alt="Cắt Tóc Và Tạo Kiểu" class="card-img-top rounded mb-3" style="height: 200px;">
                            <button class="btn btn-dark w-100">Cắt Tóc Và Tạo Kiểu</button>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card bg-primary text-white shadow-lg p-3 rounded text-center transition-transform">
                            <img src="~/images/Nhuom toc va uon toc.jpg" alt="Nhuộm Tóc và Uốn Tóc" class="card-img-top rounded mb-3" style="height: 200px;">
                            <button class="btn btn-dark w-100">Nhuộm Tóc và Uốn Tóc</button>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card bg-primary text-white shadow-lg p-3 rounded text-center transition-transform">
                            <img src="~/images/combo hot.jpg" alt="Combo Hot" class="card-img-top rounded mb-3" style="height: 200px;">
                            <button class="btn btn-dark w-100">Combo Hot</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="bg-white py-5">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 mb-4">
                        <img src="~/images/about-img.jpg" alt="Salon Experience" class="img-fluid rounded shadow-lg">
                    </div>
                    <div class="col-md-6">
                        <h2 class="display-4 font-weight-bold">HAIR SALON</h2>
                        <h3 class="lead text-muted mt-2">Sự hài lòng của quý khách là ưu tiên hàng đầu của <span class="text-warning font-weight-bold">Hair Salon</span></h3>
                        <ul class="list-unstyled lead text-muted mt-3">
                            <li><span class="text-warning font-weight-bold">✔</span> Đúng dịch vụ - Không kéo khách hay phí ẩn</li>
                            <li><span class="text-warning font-weight-bold">✔</span> Ưu tiên trải nghiệm khách hàng</li>
                            <li><span class="text-warning font-weight-bold">✔</span> Luôn đưa ra giải pháp phù hợp và chỉ bắt đầu khi đồng ý</li>
                            <li><span class="text-warning font-weight-bold">✔</span> Thấu hiểu nhu cầu, hỗ trợ nhiệt tình</li>
                            <li><span class="text-warning font-weight-bold">✔</span> Lắng nghe cẩn thận và đảm bảo dịch vụ tận tâm</li>
                        </ul>
                        <button onclick="navigateToBranch()" class="btn btn-warning mt-4">Tìm Hiểu Thêm Về Chúng Tôi</button>
                    </div>
                </div>
            </div>
        </section>
    </section>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.slick-slider').slick({
                dots: true,
                infinite: true,
                speed: 500,
                slidesToShow: 3,
                slidesToScroll: 1,
                responsive: [
                    { breakpoint: 768, settings: { slidesToShow: 2 } },
                    { breakpoint: 576, settings: { slidesToShow: 1 } }
                ]
            });
        });

        function navigateToService() {
            const userData = JSON.parse(localStorage.getItem("userData") || "{}");
            if (userData && userData.role === "Member") {
                window.location.href = "/service";
            } else {
                window.location.href = "/Account/Login";
            }
        }

        function navigateToBranch() {
            window.location.href = "/BranchPage/BranchPage";
        }
    </script>
}