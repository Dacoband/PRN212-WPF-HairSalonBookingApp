@page
@model HairSalonBookingApp.Pages.ServicePage.ListModel

@{
    ViewData["Title"] = "Service List";
}

<h2>Service List</h2>

<!-- Create Button to Add New Service -->
<a asp-page="Create" class="btn btn-primary mb-3">Create New Service</a>

<!-- Service List Table -->
<table class="table">
    <thead>
        <tr>
            <th>Service Name</th>
            <th>Type</th>
            <th>Price</th>
            <th>Duration</th>
            <th>AvatarImage</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model.Services)
        {
            <tr>
                <td>@service.ServiceName</td>
                <td>@service.Type</td>
                <td>@service.Price</td>
                <td>@service.Duration</td>
                <td>
                    <img src="~/@service.AvatarImage" alt="@service.ServiceName" style="width: 100px; height: 100px;" />
                <td>
                    <!-- View Button -->
                    <a asp-page="Details" asp-route-id="@service.Id" class="btn btn-info">Details</a> |

                    <!-- Edit Button -->
                    <a asp-page="Edit" asp-route-id="@service.Id" class="btn btn-warning">Edit</a> |

                    <!-- Delete Button -->
                    <form method="post" asp-page="Delete" asp-route-id="@service.Id" class="d-inline-block" onsubmit="return confirm('Are you sure you want to delete this service?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
