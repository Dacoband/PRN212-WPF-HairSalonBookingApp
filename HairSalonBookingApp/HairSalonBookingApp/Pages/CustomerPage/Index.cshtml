@page
@model HairSalonBookingApp.Pages.CustomerPage.IndexModel
@{
    ViewData["Title"] = "Customer List";
}

<h1>Customer List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Date of Birth</th>
            <th>Avatar</th>
            <th>Actions</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.CustomerName</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.Address</td>
                <td>@customer.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (!string.IsNullOrEmpty(customer.AvatarImage))
                    {
                        <img src="@customer.AvatarImage" alt="Avatar" width="50" height="50" />
                    }
                    else
                    {
                        <span>No Avatar</span>
                    }
                </td>
                <td>
                   
                    <form method="post" asp-page-handler="Delete" asp-route-id="@customer.Id" onsubmit="return confirm('Are you sure you want to delete this customer?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
