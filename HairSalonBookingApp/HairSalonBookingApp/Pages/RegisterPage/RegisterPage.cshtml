@page
@model HairSalonBookingApp.Pages.RegisterPage.RegisterPageModel
@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        justify-content: center;
        min-height: 100vh;
        margin: 0;
    }

    .main-container {
        display: flex;
        align-content: center;
        align-items: center;
        justify-content: center;
        justify-items: center;
    }
    .register-container {
        width: 100%;
        max-width: 400px;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        align-items: center;
    }

    h2 {
        text-align: center;
        color: #333333;
        margin-bottom: 20px;
    }

    form div {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
        color: #333333;
    }

    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        border: 1px solid #cccccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    button[type="submit"],
    button[type="button"] {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    button[type="submit"] {
        background-color: #4CAF50;
        color: #ffffff;
    }

        button[type="submit"]:hover {
            background-color: #45a049;
        }

    button[type="button"] {
        background-color: #007BFF;
        color: #ffffff;
        margin-top: 10px;
    }

        button[type="button"]:hover {
            background-color: #0056b3;
        }

    .error-message {
        color: red;
        font-size: 14px;
    }
</style>
<div class="main-container">
<div class="register-container">
    <h2>Register</h2>
    <form method="post">
        <div>
            <label>Email:</label>
            <input asp-for="Email" type="email" required />
            <span asp-validation-for="Email" class="error-message"></span>
        </div>
        <div>
            <label>Password:</label>
            <input asp-for="Password" type="password" required />
            <span asp-validation-for="Password" class="error-message"></span>
        </div>
        <div>
            <label>Confirm password:</label>
            <input asp-for="ConfirmPassword" type="password" required />
            <span asp-validation-for="ConfirmPassword" class="error-message"></span>
        </div>
        <button type="submit">Register</button>
        <button type="button" onclick="location.href='@Url.Page("/LoginPage/LoginPage")'">Back to Login</button>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">@Model.ErrorMessage</div>
        }
    </form>
</div>
</div>
