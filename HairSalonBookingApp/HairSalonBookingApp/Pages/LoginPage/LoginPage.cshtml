@page
@model HairSalonBookingApp.Pages.LoginPage.LoginPageModel
@{
    ViewData["Title"] = "Trang Đăng Nhập";
    Layout = "_Layout";
}
<div class="flex items-center justify-center h-screen bg-gray-100 
            bg-gradient-to-br from-blue-400 to-purple-800 to-pink-500">
    <div class="w-full max-w-md h-auto bg-white p-8 rounded-lg shadow-lg overflow-auto bg-gradient-to-br from-blue-900 to-gray-800 to-pink-300 border border-purple-700">
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Đăng Nhập</h2>

        <form method="post" class="space-y-4 ">
            <div>
                <label class="block text-white font-semibold mb-1">Email:</label>
                <input type="email" asp-for="Email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label class="block text-white font-semibold mb-1">Mật khẩu:</label>
                <input type="password" asp-for="Password" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <button type="submit" class="w-full py-2 px-4 bg-green-500 text-white rounded-md hover:bg-green-700 transition duration-300 transform hover:scale-95">Đăng Nhập</button>
            </div>

            <div>
                <button type="submit" name="handler" value="register" class="w-full py-2 px-4 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition duration-300 transform hover:scale-95 mt-2">Đăng Ký</button>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <span class="text-red-500 text-sm">@Model.ErrorMessage</span>
            }
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
