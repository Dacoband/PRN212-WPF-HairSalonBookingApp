@page
@model HairSalonBookingApp.Pages.LoginPage.LoginPageModel
@{
    ViewData["Title"] = "Login page";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        justify-content: center;
        min-height: 100vh;
        margin: 0;
    }
    .main-container{
        display: flex;
        align-content:center;
        align-items: center;
        justify-content: center;
        justify-items: center;
    }
    .login-container {
        width: 100%;
        max-width: 400px;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    h2 {
        text-align: center;
        color: #333333;
        margin-bottom: 20px;
    }

    form div {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
        color: #333333;
    }

    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        border: 1px solid #cccccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    button[type="submit"] {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 4px;
        background-color: #4CAF50;
        color: #ffffff;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    button[type="submit"]:hover {
        background-color: #45a049;
    }

    .register-btn {
        background-color: #007BFF;
        margin-top: 10px;
    }

    .register-btn:hover {
        background-color: #0056b3;
    }

    .error-message {
        color: red;
        font-size: 14px;
    }
</style>
<div class="main-container">
<div class="login-container">
    <h2>Login</h2>
    <form method="post">
        <div>
            <label>Email:</label>
            <input type="email" asp-for="Email" />
            <span asp-validation-for="Email" class="error-message"></span>
        </div>
        <div>
            <label>Password:</label>
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password" class="error-message"></span>
        </div>
        <div>
            <button type="submit">Login</button>
        </div>
        <div>
            <button type="submit" name="handler" value="register" class="register-btn">Register</button>
        </div>
        <span class="error-message">@Model.ErrorMessage</span>
    </form>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
