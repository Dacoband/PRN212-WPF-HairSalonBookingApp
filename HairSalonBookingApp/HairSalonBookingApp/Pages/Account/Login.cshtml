@page
@model HairSalonBookingApp.Pages.Account.LoginPageModel
@{
    ViewData["Title"] = "Trang Đăng Nhập";
    Layout = "_Layout";
}
<h3 class="d-flex justify-content-center align-items-center">@ViewData["Title"]</h3>
<div class="container d-flex justify-content-center align-items-center min-vh-30 mb-3">
    <div class="row border rounded-3 p-3 bg-white shadow" style="width: 930px">
        <div class="col-md-6 rounded-3 d-flex justify-content-center align-items-center flex-column ">
            <div class="featured-image">
                <img src="~/images/background.jpg" class="img-fluid" style="width:100%" alt="" />
            </div>
        </div>

        <div class="col-md-6" style="padding: 40px 30px 40px 40px">
            <div class="row align-items-center">
                <div class="justify-content-center align-items-center">
                    <h4 class="text-center">Chào mừng đến với Gentleman</h4>
                    @* <h4 class="text-nowrap">Log in to be able to purchase</h4> *@
                </div>

                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <div class="form-floating">
                            <input asp-for="Email" class="form-control form-control-lg bg-light fs-6" autocomplete="email" aria-required="true" />
                            <label asp-for="Email" class="form-label"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-floating">
                            <input asp-for="Password" class="form-control form-control-lg bg-light fs-6" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Password" class="form-label"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-4">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary fs-6">Đăng nhập</button>
                    </div>
                </form>
                <div class="row mt-3">
                    <small>Bạn chưa có tài khoản? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký mới</a></small>
                </div>
            </div>

        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
