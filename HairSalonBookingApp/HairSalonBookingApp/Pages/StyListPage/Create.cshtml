@page
@model HairSalonBookingApp.Pages.StyListPage.CreateModel
@{
    ViewData["Title"] = "Create Stylist";
}

<h2>Create New Stylist</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Stylist.Email"></label>
        <input asp-for="Stylist.Email" class="form-control" />
        <span asp-validation-for="Stylist.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Stylist.Password"></label>
        <input asp-for="Stylist.Password" class="form-control" type="password" />
        <span asp-validation-for="Stylist.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Stylist.StylistName"></label>
        <input asp-for="Stylist.StylistName" class="form-control" />
        <span asp-validation-for="Stylist.StylistName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Stylist.PhoneNumber"></label>
        <input asp-for="Stylist.PhoneNumber" class="form-control" />
        <span asp-validation-for="Stylist.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Stylist.Address"></label>
        <input asp-for="Stylist.Address" class="form-control" />
        <span asp-validation-for="Stylist.Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Stylist.BranchID">Branch</label>
        <select asp-for="Stylist.BranchID" class="form-control">
            <option value="">Select Branch</option>
            @foreach (var branch in Model.Branches)
            {
                <option value="@branch.Id">@branch.SalonBranches</option>
            }
        </select>
        <span asp-validation-for="Stylist.BranchID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Stylist.StaffStylistId">Staff Stylist</label>
        <select asp-for="Stylist.StaffStylistId" class="form-control">
            <option value="">Select Staff Stylist (Optional)</option>
            @foreach (var staffStylist in Model.StaffStylists)
            {
                <option value="@staffStylist.Id">@staffStylist.StaffStylistName</option>
            }
        </select>
        <span asp-validation-for="Stylist.StaffStylistId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Stylist.AvatarImage">Avatar Image</label>
        <input asp-for="Stylist.AvatarImage" type="file" class="form-control" />
        <span asp-validation-for="Stylist.AvatarImage" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create Stylist</button>
    <a asp-page="/Index" class="btn btn-secondary mt-3 ms-2">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
