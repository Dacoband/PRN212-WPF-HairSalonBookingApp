@page
@model HairSalonBookingApp.Pages.StyListPage.IndexModel
@{
    ViewData["Title"] = "Stylist List";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}


<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Our Stylists</h2>

    <!-- Nút Create mới -->
    <div class="mb-3">
        <a href="@Url.Page("/StylistPage/Create")" class="btn btn-success">Create New Stylist</a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-bordered table-hover align-middle text-center mb-0">
            <thead class="table-primary text-secondary">
                <tr>
                    <th>Stylist Name</th>
                    <th>Branch</th>
                    <th>Phone Number</th>
                    <th>Address</th>
                    <th>Average Rating</th>
                    <th>Staff Manager</th>
                    <th>Actions</th> <!-- Add a column for actions -->
                </tr>
            </thead>
            <tbody>
                @if (Model.Stylists != null && Model.Stylists.Any())
                {
                    @foreach (var stylist in Model.Stylists)
                    {
                        <tr>
                            <td>@stylist.StylistName</td>
                            <td>@stylist.Branch.SalonBranches</td>
                            <td>@stylist.PhoneNumber</td>
                            <td>@stylist.Address</td>
                            <td>@stylist.AverageRating</td>
                            <td>@stylist.StaffStylist.StaffStylistName</td>
                            <td>
                                <!-- Delete Button -->
                                <form method="post" asp-page-handler="Delete" asp-route-stylistId="@stylist.Id">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this stylist?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-muted">No stylists available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

