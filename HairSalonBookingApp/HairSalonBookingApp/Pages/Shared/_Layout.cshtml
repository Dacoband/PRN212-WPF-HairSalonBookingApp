<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - HairSalonBookingApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HairSalonBookingApp.styles.css" asp-append-version="true" />

    @* Boostrap Icon *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    @* Toastr *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    @* DataTable *@
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css" />

    @* Tailwind *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <header class="bg-gray-800 text-white py-3  shadow-md">
        <div class="container mx-auto flex justify-between items-center px-6">
            <a href="@Url.Action("Index", "Home")" class="flex items-center">
                <img src="~/images/Logo.jpg" class="w-auto h-12 mr-4" alt="Hair Salon Logo">
                <h1 class="text-3xl font-extrabolid">GentleMen</h1>
            </a>
            <nav>
                <a href="/" class="px-4">Trang chủ</a>
                <a href="/About" class="px-4">Đặt lịch</a>
                <a href="/LoginPage/LoginPage" class="px-4">Đăng Nhập</a>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="w-full">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="bg-gray-800 text-white py-3">
        <div class="container mx-auto text-center">
            <p>&copy; 2023 Hair Salon Booking App. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.tiny.cloud/1/z5cm19c6b8uqptz3g7dbzagxo2qwa5c1u1ijlbwsafhusc4k/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
