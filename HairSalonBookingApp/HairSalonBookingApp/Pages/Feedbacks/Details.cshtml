@page
@model HairSalonBookingApp.Pages.Feedbacks.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Feedback</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Customer Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feedback.Customer.CustomerName)
        </dd>
        <dt class="col-sm-2">
            Stylist Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feedback.Stylist.StylistName)
        </dd>
        <dt class="col-sm-2">
            Rating
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feedback.Rating)
        </dd>
        <dt class="col-sm-2">
            Comment
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feedback.Comment)
        </dd>
        <dt class="col-sm-2">
            Create Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feedback.InsDate)
        </dd>
        <dt class="col-sm-2">
            Update Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feedback.UpdDate)
        </dd>
        <dt class="col-sm-2">
            Is Deleted
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feedback.DelFlg)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Feedback?.FeedbackID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
