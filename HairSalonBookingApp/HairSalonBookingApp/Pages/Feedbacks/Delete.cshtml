    <h4>Feedback</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Customer Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feedback.Customer.CustomerName)
        </dd>
        <dt class="col-sm-2">
            Stylist Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feedback.Stylist.StylistName)
        </dd>
        <dt class="col-sm-2">
            Rating
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feedback.Rating)
        </dd>
        <dt class="col-sm-2">
            Comment
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feedback.Comment)
