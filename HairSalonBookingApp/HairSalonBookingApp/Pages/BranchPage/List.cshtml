@page
@model HairSalonBookingApp.Pages.BranchPage.ListModel

@{
    ViewData["Title"] = "Branch List";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Our Salon Branches</h2>

    
    @if (User.IsInRole("Admin"))
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a asp-page="./AddBranch" class="btn btn-outline-success shadow-sm d-flex align-items-center gap-2">
                <i class="bi bi-plus-circle"></i> Add New Branch
            </a>
        </div>
    }

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-bordered table-hover align-middle text-center mb-0">
            <thead class="table-primary text-secondary">
                <tr>
                    <th>Select</th>
                    <th>Salon Branches</th>
                    <th>Address</th>
                    <th>Phone</th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th>Actions</th> 
                    }
                </tr>
            </thead>
            <tbody>
                @if (Model.Branches != null && Model.Branches.Any())
                {
                    @foreach (var branch in Model.Branches)
                    {
                        <tr>
                            <td>
                                <form method="post" asp-page-handler="SelectBranch">
                                    <input type="hidden" name="branchId" value="@branch.Id" />
                                    <button type="submit" class="btn btn-primary btn-sm">Select</button>
                                </form>
                            </td>
                            <td>@branch.SalonBranches</td>
                            <td>@branch.Address</td>
                            <td>@branch.Phone</td>

                            @if (User.IsInRole("Admin"))
                            {
                                <td>
                                    <!-- Edit and Delete buttons for Admin -->
                                    <a asp-page="./EditBranch" asp-route-id="@branch.Id" class="btn btn-warning btn-sm">Edit</a>
                                    <form method="post" asp-page-handler="DeleteBranch" asp-route-id="@branch.Id" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            }
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-muted">No branches available.</td>
                    </tr>
                }
            </tbody>
        </table>
        <div id="selectedServicesContainer" class="mt-5">
            <h4>Selected Services</h4>
            <div id="selectedServicesList" class="row">
                @foreach (var service in Model.SelectedServices)
                {
                    <div class="col-md-6 col-lg-3 mb-4">
                        <div class="function-card">
                            <button class="btn btn-outline-primary w-100" onclick="window.location.href='/ServicePage/Details?id=@service.Id'">
                                <div class="card">
                                    <img src="@service.AvatarImage" class="card-img-top" alt="@service.ServiceName">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">@service.ServiceName</h5>
                                        <p class="card-text text-center">@service.Description</p>
                                        <p class="card-text text-center"><strong>Price:</strong> $@service.Price</p>
                                        <p class="card-text text-center"><strong>Duration:</strong> @service.Duration minutes</p>
                                    </div>
                                </div>
                            </button>
                        </div>
                    </div>
                }
            </div>

    </div>
</div>


<style>
    .container {
        max-width: 900px;
    }

    .table {
        border-radius: 0.25rem;
        overflow: hidden;
    }

        .table thead {
            background-color: #007bff;
            color: white;
        }

    .table-hover tbody tr:hover {
        background-color: #f1f4f9;
    }

    .btn-outline-success {
        font-size: 1rem;
        padding: 0.5rem 1rem;
        transition: all 0.3s ease;
    }

        .btn-outline-success:hover {
            background-color: #28a745;
            color: white;
        }
</style>
