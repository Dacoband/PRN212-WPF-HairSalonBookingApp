@page
@model HairSalonBookingApp.Pages.BranchPage.ListModel

@{
    ViewData["Title"] = "Branch List";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Our Salon Branches</h2>

    @if (User.IsInRole("Admin"))
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a asp-page="/BranchPage/CreateBranch" class="btn btn-outline-success shadow-sm d-flex align-items-center gap-2">
                <i class="bi bi-plus-circle"></i> Add New Branch
            </a>
        </div>
    }

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-bordered table-hover align-middle text-center mb-0">
            <thead class="table-primary text-secondary">
                <tr>
                    @if (User.IsInRole("Admin"))
                    {
                        <th>Select</th>
                    }
                    <th>Salon Branches</th>
                    <th>Address</th>
                    <th>Phone</th>
                    @if (User.IsInRole("Customer"))
                    {
                        <th>Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @if (Model.Branches != null && Model.Branches.Any())
                {
                    @foreach (var branch in Model.Branches)
                    {
                        <tr>
                            @if (User.IsInRole("Customer"))
                            {
                                <td>
                                    <form method="post" asp-page-handler="SelectBranch">
                                        <input type="hidden" name="branchId" value="@branch.Id" />
                                        <button type="submit" class="btn btn-primary btn-sm">Select</button>
                                    </form>
                                </td>
                            }
                            <td>@branch.SalonBranches</td>
                            <td>@branch.Address</td>
                            <td>@branch.Phone</td>

                            @if (User.IsInRole("Admin"))
                            {
                                <td>
                                    <!-- Edit and Delete buttons for Admin -->
                                    <a asp-page="./EditBranch" asp-route-id="@branch.Id" class="btn btn-warning btn-sm">Edit</a>
                                    <form method="post" asp-page-handler="DeleteBranch" asp-route-id="@branch.Id" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            }
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-muted">No branches available.</td>
                    </tr>
                }
            </tbody>
        </table>
        <div id="selectedServicesContainer" class="mt-5">
            <h4>Selected Services</h4>
            <div id="selectedServicesList" class="row"></div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Lấy danh sách dịch vụ từ sessionStorage
        const selectedServices = JSON.parse(sessionStorage.getItem('selectedServices')) || [];

        // Phần tử chứa danh sách dịch vụ
        const selectedServicesContainer = document.getElementById("selectedServicesList");

        // Hiển thị danh sách dịch vụ đã chọn
        selectedServices.forEach(service => {
            const serviceDiv = document.createElement("div");
            serviceDiv.classList.add("col-md-4", "service-item", "mb-3");

            serviceDiv.innerHTML = `
                    <div class="card">
                        <img src="${service.avatar}" alt="${service.name}" class="card-img-top" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">${service.name}</h5>
                            <p class="card-text"><strong>Description:</strong> ${service.description}</p>
                            <p class="card-text"><strong>Price:</strong> $${service.price}</p>
                            <p class="card-text"><strong>Duration:</strong> ${service.duration} minutes</p>
                        </div>
                    </div>
                `;

            selectedServicesContainer.appendChild(serviceDiv);
        });

        // Hiển thị thông báo nếu không có dịch vụ nào được chọn
        if (selectedServices.length === 0) {
            selectedServicesContainer.innerHTML = "<p>No services selected.</p>";
        }
    });
</script>

<style>
    .container {
        max-width: 900px;
    }

    .table {
        border-radius: 0.25rem;
        overflow: hidden;
    }

        .table thead {
            background-color: #007bff;
            color: white;
        }

    .table-hover tbody tr:hover {
        background-color: #f1f4f9;
    }

    .btn-outline-success {
        font-size: 1rem;
        padding: 0.5rem 1rem;
        transition: all 0.3s ease;
    }

        .btn-outline-success:hover {
            background-color: #28a745;
            color: white;
        }

    .service-item {
        max-width: 300px;
        margin: 0 auto;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 15px;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .card-text {
        font-size: 1rem;
        margin-bottom: 10px;
    }
</style>
