
@model HairSalonBookingApp.Pages.StaffStylistPage.EditStaffStylistModel
@page "{id:guid}"
@{
    ViewData["Title"] = "Edit Staff Stylist";
}

<h1>Edit Staff Stylist</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="StaffStylistName">Name</label>
        <input type="text" class="form-control" id="StaffStylistName" name="StaffStylistName" value="@Model.StaffStylist.StaffStylistName" required />
    </div>
    <div class="form-group">
        <label for="BranchID">Branch</label>
        <select class="form-control" id="BranchID" name="BranchID" required>
            <!-- Populate with Branches -->
        </select>
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.StaffStylist.Account.Email" required />
    </div>
    <div class="form-group">
        <label for="PhoneNumber">Phone Number</label>
        <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.StaffStylist.PhoneNumber" required />
    </div>
    <div class="form-group">
        <label for="AvatarImage">Avatar</label>
        <input type="file" class="form-control" id="AvatarImage" name="AvatarImage" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
