@page
@model HairSalonBookingApp.Pages.StaffStylistPage.CreateStaffStylistModelModel
@{
    ViewData["Title"] = "Create Staff Stylist";
}

<h1>Create Staff Stylist</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="StaffStylistName">Name</label>
        <input type="text" class="form-control" id="StaffStylistName" name="StaffStylistName" required />
    </div>
    <div class="form-group">
        <label for="BranchID">Branch</label>
        <select class="form-control" id="BranchID" name="StaffStylist.BranchID" required>
            <option value="">-- Select Branch --</option>
            @foreach (var branch in Model.Branches)
            {
                <option value="@branch.Id">@branch.SalonBranches</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" required />
    </div>
    <div class="form-group">
        <label for="PhoneNumber">Phone Number</label>
        <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" required />
    </div>
    <div class="form-group">
        <label for="AvatarImage">Avatar</label>
        <input type="file" class="form-control" id="AvatarImage" name="AvatarImage" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
